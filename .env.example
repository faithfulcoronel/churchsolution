# Example environment variables for local development
# Copy this file to `.env` and provide real values before running the project.

# -- Supabase client configuration --
# URL to your Supabase project
VITE_SUPABASE_URL=
# Public anon key for the project
VITE_SUPABASE_ANON_KEY=
# Optional project ID used to store auth tokens in localStorage
VITE_SUPABASE_PROJECT_ID=

# These variables are used by Supabase Edge Functions
SUPABASE_URL=
SUPABASE_ANON_KEY=

# -- Stripe configuration --
# Publishable key used on the frontend
VITE_STRIPE_PUBLIC_KEY=
# Secret key used by Supabase Edge Functions
STRIPE_SECRET_KEY=

# -- Optional API keys referenced in supabase/config.toml --
OPENAI_API_KEY=
SUPABASE_AUTH_SMS_TWILIO_AUTH_TOKEN=
SUPABASE_AUTH_EXTERNAL_APPLE_SECRET=
S3_HOST=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Cache durations (in milliseconds)
VITE_CATEGORY_CACHE_DURATION_MS=300000
VITE_TENANT_CACHE_DURATION_MS=300000

# -- Custom PostgREST settings --
PGRST_APP_SETTINGS_BASE_URL=
PGRST_APP_SETTINGS_EMAIL_SERVICE_URL=
PGRST_APP_SETTINGS_SERVICE_ROLE_KEY=

# -- Email service (Resend) configuration --
RESEND_API_KEY=
RESEND_FROM_EMAIL=
